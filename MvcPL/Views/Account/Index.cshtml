@model MvcPL.Models.Input.UserProfileInputModel

@{
    ViewBag.Title = "Index";
}

@section Body{
    <div class="row">
        <div class="col-md-offset-3 col-md-6">

            <h2>Change profile data</h2>

            @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <img class="img-thumbnail" width="150" src="@Url.Action("GetImage", "Account", new { id = Model.Id })" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <input type="file" accept="image/*" name="Image" id="file" class="file-select" />
                            <label for="file">
                                <i class="fa fa-arrow-circle-o-up"></i>
                                Выберите файл...
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                    <hr />

                </div>
            }


                    </div>
                </div>


            }