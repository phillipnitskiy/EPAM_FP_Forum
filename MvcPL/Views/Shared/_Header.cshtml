<header class="header navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-header">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Forum", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse header-navbar-collapse" id="navbar-collapse-header">
            <ul class="nav navbar-nav">
                <li>
                    <div class="col-sm-12">
                        @using (Html.BeginForm("FindTopic", "Forum", null, FormMethod.Post, new { @class = "nav navbar-form navbar-left", role = "search" }))
                        {
                            <div class="input-group">
                                @Html.Editor("term", new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Search", id = "topic_search" } })                              
                                <div class="input-group-btn">
                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </li>
            </ul>

            @if (@ViewBag.LoginDisabled == null)
            {
                <ul class="nav navbar-nav navbar-right">

                    @Html.Partial("_LoginPartial")

                </ul>
            }

</div><!-- /.navbar-collapse -->

    </div><!-- /.container -->
</header>